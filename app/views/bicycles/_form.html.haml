= form_for @bicycle do |f|
  - if @bicycle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bicycle.errors.count, "error")} prohibited this bicycle from being saved:"
      %ul
        - @bicycle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :producer
    = f.text_field :producer
  .field
    = f.label :frame_number
    = f.text_field :frame_number
  .actions
    = f.submit 'Save'

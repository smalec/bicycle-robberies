= form_for @reporter do |f|
  - if @reporter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reporter.errors.count, "error")} prohibited this reporter from being saved:"
      %ul
        - @reporter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
